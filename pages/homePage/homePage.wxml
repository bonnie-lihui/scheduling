<!--pages/homePage/homePage.wxml-->

<view>
  上次上班日期: {{ lastWorkingDay }}
  <van-button round type="danger" bind:tap="onSwitchStatus">切换</van-button>
</view>

<van-calendar show="{{ show }}" min-date="{{ minDate }}" max-date="{{ maxDate }}" bind:close="onSwitchStatus" bind:confirm="onConfirm" />



<!-- 平铺开的日历 -->
<van-calendar title="排班表" readonly='"true"' min-date="{{ minDate }}" max-date="{{ maxDate }}" formatter="{{ formatter }}" poppable="{{ false }}" show-confirm="{{ false }}" class="calendar" />